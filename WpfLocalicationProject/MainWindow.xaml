<Window x:Class="WpfLocalicationProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfLocalicationProject"
        mc:Ignorable="d"
        Title="{StaticResource MainWindow}" Height="350" Width="525">
    <Grid>
        <StackPanel>
            <Menu>
                <MenuItem Header="Choose Language" Width="100">
                    <MenuItem Header="English" Click="MenuEnglish_Click"/>
                    <MenuItem Header="Myanmar" Click="MenuMyanmar_Click"/>
                    <MenuItem Header="Korean" Click="MenuKorean_Click"/>
                </MenuItem>
            </Menu>
            <!-- Example of using localized strings directly in XAML -->
            <TextBlock Text="{StaticResource Monday}" />
            <TextBlock Text="{StaticResource Tuesday}" />
            <!-- Add other days of the week as needed -->
        </StackPanel>
    </Grid>
</Window>
